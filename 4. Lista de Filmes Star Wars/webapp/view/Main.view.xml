<mvc:View controllerName="mod2projeto.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table items="{/results}">
                <columns>
                    <Column>
                        <Text text="Título"></Text>
                    </Column>
                    <Column>
                        <Text text="Episódio"></Text>
                    </Column>
                    <Column>
                        <Text text="Diretor"></Text>
                    </Column>
                    <Column>
                        <Text text="Produtor"></Text>
                    </Column>
                    <Column>
                        <Text text="Data de Lançamento"></Text>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{title}"></Text>
                            <Text text="{episode_id}"></Text>
                            <Text text="{director}"></Text>
                            <Text text="{producer}"></Text>
                            <Text text="{
                                path: 'release_date',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'long',
                                    source: {
                                        pattern: 'yyyy-MM-dd'
                                    }
                                }
                            }"></Text>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
